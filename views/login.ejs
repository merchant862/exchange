<%- include('./partials/header.ejs') %>

<%- include('./partials/unauthenticated-menu.ejs') %>

<br/>
  <div class="container" style="width: 40%;">
    <% if (typeof success != "undefined") { %>
      <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> <%= success %>
      </div>
    <% } %>
    <% if (typeof error != "undefined") { %>
      <div class="alert alert-danger alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Error!</strong> <%= error %>
      </div>
    <% } %>
  </div>
  <div class="vh-100 d-flex justify-content-center">
    <div class="form-access my-auto">
      <form action="/login" method="post">
        <span>Sign In</span>
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="Email Address">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <div class="text-right">
          <a href="/reset-pass">Forgot Password?</a>
        </div>
        <!-- <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="form-checkbox">
          <label class="custom-control-label" for="form-checkbox">Remember me</label>
        </div> -->
        <div class="col-12 mt-3">
          <div class="g-recaptcha" data-sitekey="6LcWUO4gAAAAAJkJU1LnabFUbDbn-nN5-cOHUd1w"></div>
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
      </form>
      <h2>Don't have an account? <a href="/signup">Sign up here</a></h2>
    </div>
  </div>
  
  <script src="https://www.google.com/recaptcha/api.js"></script>

  <%- include('./partials/scripts.ejs') %>

</body>

</html>